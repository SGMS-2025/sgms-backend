# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000

# MongoDB Configuration
# Option 1: Use MONGODB_URI (recommended)
MONGODB_URI=mongodb://localhost:27017/sgms_dev

# Option 2: Use individual DB environment variables
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=sgms_dev
# DB_USER=
# DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=debug

# Database Connection Pool (optional)
MAX_CONNECTION_POOL=10
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=10000

# Example for different environments:

# Development
# MONGODB_URI=mongodb://localhost:27017/sgms_dev

# Staging
# MONGODB_URI=mongodb://localhost:27017/sgms_staging

# Production (with authentication)
# MONGODB_URI=mongodb://username:password@host:port/sgms_production

# MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sgms_production
