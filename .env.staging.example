# Staging Environment Configuration
NODE_ENV=staging
PORT=4000

# Database Configuration - Staging
DATABASE_URL="postgresql://staging_user:staging_password@staging_host:5432/sgms_staging"

# Alternative individual DB configs
# DB_HOST=staging_host
# DB_PORT=5432
# DB_NAME=sgms_staging
# DB_USER=sgms_staging_user
# DB_PASSWORD=staging_password

# JWT Configuration - Staging
JWT_SECRET=staging-jwt-secret-should-be-different-from-prod-and-dev
JWT_EXPIRES_IN=12h

# Logging - Staging
LOG_LEVEL=info

# Security - Staging
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=75

# CORS Configuration - Staging
CORS_ORIGIN=https://staging.yourdomain.com,http://localhost:3000

# Staging specific settings
MAX_CONNECTION_POOL=10
CONNECTION_TIMEOUT=20000
QUERY_TIMEOUT=8000
