{
  "name": "sgms-backend",
  "version": "1.0.0",
  "description": "SGMS Backend with Clean Architecture",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test:config": "node test-config.js",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "console:check": "node scripts/check-console.js",
    "console:fix": "node scripts/check-console.js --fix",
    "pre-commit": "npm run console:check && npm run lint:check",
    "pre-push": "npm run console:check && npm run lint:check && npm test",
    "db:setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-db-simple.ps1",
    "db:setup:bash": "bash scripts/setup-db.sh",
    "env:setup:dev": "powershell -ExecutionPolicy Bypass -File scripts/setup-environment.ps1 dev",
    "env:setup:staging": "powershell -ExecutionPolicy Bypass -File scripts/setup-environment.ps1 staging",
    "env:setup:prod": "powershell -ExecutionPolicy Bypass -File scripts/setup-environment.ps1 prod",
    "env:setup:bash": "bash scripts/setup-environment.sh",
    "test": "jest",
    "prepare": "husky",
    "commit": "cz",
    "commit:interactive": "git-cz"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.4.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "jest": "^29.6.2",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "mongoose",
    "clean-architecture",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "node scripts/check-console.js"
    ],
    "scripts/**/*.js": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  }
}
