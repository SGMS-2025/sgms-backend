# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration - Production
# Use DATABASE_URL for production (more secure)
DATABASE_URL="postgresql://prod_user:secure_password@prod_host:5432/sgms_production"

# Alternative individual DB configs (not recommended for production)
# DB_HOST=your_production_host
# DB_PORT=5432
# DB_NAME=sgms_production
# DB_USER=sgms_prod_user
# DB_PASSWORD=very_secure_production_password

# JWT Configuration - Production
JWT_SECRET=super-secure-jwt-secret-for-production-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# Logging - Production
LOG_LEVEL=warn

# Security - Production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# CORS Configuration - Production
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# SSL Configuration (if needed)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# Additional Production Settings
MAX_CONNECTION_POOL=20
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=10000
